<% provide(:title, 'Base-Index') %>
<% provide(:button_text, '編集') %>

<h1>拠点一覧</h1>

<table class="table table-bordered table-condensed user-table">
  <tr>
    <td></td>
    <td></td>
    <td>拠点番号</td>
    <td>拠点名</td>
    <td>勤怠種類</td>
  </tr>
  
  <% @bases.each do |base| %>
  <tr>
    <td><%= link_to "編集", '#', class: "btn btn-primary" %></td>
    <td><%= link_to "削除", '#', class: "btn btn-primary", data: {confirm: "削除してよろしいですか？" } %></td>
    <td><%= base.id %></td>
    <td><%= base.name %></td>
    <td>
      <form method="get" action="select.html">
        <p>
          <select name="example" required>
          <option value=""></option>
          <option value="選択肢1">出勤</option>
          <option value="選択肢2">退勤</option>
        </p>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to "拠点情報追加", new_basis_path, class: "btn btn-lg btn-primary" %>
