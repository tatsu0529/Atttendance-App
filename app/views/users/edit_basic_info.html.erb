<h1>基本情報の更新</h1>

<%= form_with(model: @user, url: update_basic_info_user_path, method: :patch, local: true) do |f| %>
  <div class= "row">
    <div class="col-md-6 col-md-offset-3">
      <p>指定勤務時間</p>
      <%= f.time_field :work_time, class: "form-control" %>
      
      <p>基本時間</p>
      <%= f.time_field :basic_time, class: "form-control"%>
      
      <%= f.submit "更新", class: "btn btn-primary btn-basic_info" %>
    </div>
  </div>
<% end %>