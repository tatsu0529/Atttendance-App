<% provide(:title, 'Attended Employees') %>
<h1>出勤中社員一覧</h1>

<div class="col-md-10 col-offset-3">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <td>社員番号</td>
        <td>名前</td>
      </tr>
      <% @now_users.each do |user| %>
        <tr>
          <td><%= @now_users.employee_number %></td>
          <td><%= @now_users.name %></td>
        </tr>
      <% end %>
    </thead>
  </table>
</div>