<% provide(:title, 'login') %>
<% provide(:button_text, 'Log in') %>
<% provide(:class_text, 'label-login') %>

<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    
      <%= f.label :email,class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :password,class: "label-#{yield(:class_text)}" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
        <%=f.check_box :remember_me, id: "remember_me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
    
    <p>ユーザー登録がまだの方は<%= link_to "こちら", signup_path %></p>
  </div>
</div>